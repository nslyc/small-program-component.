/* plugin/components/show-list/show-list.wxss */

/* 显示用户收听次数模态框 start */

.show-listener-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.show-listener {
  width: 670rpx;
  height: 820rpx;
  background-color: #fff;
  margin-top: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.show-listener-title {
  top: 0;
  left: 0;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #e5e5e5;
}

.show-listener-list-wrap {
  height: 700rpx;
}

.no-listener {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.listener-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 19rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.listener-left {
  display: flex;
  align-items: center;
}

.listener-left>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.listener-name {
  width: 176rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
}

.listener-time {
  font-size: 26rpx;
  color: #999;
}

.close-listener {
  width: 96rpx;
  height: 96rpx;
  margin-top: 30rpx;
}

/* 显示用户收听次数模态框 end */
